@model ManageAccountVM

<div class="row">
    <h3>Change Password</h3>
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="ChangePassword" method="post">
            <div class="form-group">
                <label asp-for="@Model.CurrentPassword"></label>
                <input asp-for="@Model.CurrentPassword" class="form-control" placeholder="Current Password"/>
                <span asp-validation-for="@Model.CurrentPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" placeholder="New Password"/>
                <span asp-validation-for="@Model.Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                <span asp-validation-for="@Model.ConfirmPassword"></span>
            </div>
            <button class="btn btn-warning pull-right" type="submit">Save</button>
        </form>
    </div>
</div>