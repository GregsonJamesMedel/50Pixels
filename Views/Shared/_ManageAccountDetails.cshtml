@model ManageAccountVM

<div class="row">
    <h3>Change Account Details</h3>
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="AccountDetails" method="post">
            <div class="form-group">
                <label asp-for="@Model.Firstname"></label>
                <input asp-for="@Model.Firstname" class="form-control" placeholder="Change Firstname"/>
                <span asp-validation-for="@Model.Firstname"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Lastname"></label>
                <input asp-for="@Model.Lastname" class="form-control" placeholder="Change Lastname"/>
                <span asp-validation-for="@Model.Lastname"></span>
            </div>
            <button class="btn btn-warning pull-right" type="submit">Save</button>
        </form>
    </div>
</div>