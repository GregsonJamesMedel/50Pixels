<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>@ViewBag.Title</title>

  <link href="~/css/bootstrap.css" rel="stylesheet">
  <link href="~/css/bootstrap-theme.css" rel="stylesheet">
  <link href="~/css/style.css" rel="stylesheet">
  <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>

<body>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="fa fa-image"></i> 50 Pixels</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a asp-controller="Pictures" asp-action="Upload">Upload</a></li>
          <li><a asp-controller="Account" asp-action="SignUp">Sign up</a></li>
          <li><a asp-controller="Account" asp-action="SignIn">Sign in</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div id="header">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <h1>Your Favourite Source of Free Stock Photos</h1>
          <form class="form-inline signup" role="form">
            <div class="form-group">
              <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Search Photos">
            </div>
            <button type="submit" class="btn btn-theme">Search</button>
          </form>
        </div>
      </div>
    </div>
  </div> 

  @RenderBody()

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <p class="copyright text-center">&copy; 50 Pixels</p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
  <script src="~/js/bootstrap.min.js"></script>
  <script src="~/js/fiftypixels.js"></script>
</body>

</html>