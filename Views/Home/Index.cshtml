@model HomeIndexViewModel

<h2 class="text-center">Free Stock Photos</h2>

<div class="container-fluid">
    <div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2 id="modal-header">Modal Header</h2>
    </div>
    <div class="modal-body">
        <img src="~/img/main-bg.jpg" id="modal-img" class="img-responsive">
    </div>
    <div class="modal-footer">
        <span id="photographer"><i class="fa fa-camera"></i> <a href="#">Gregson Medel<a></span>
        <ul>
          <li><a href="#"><i class="fa fa-heart"></i></a></li>
          <li><a href="#"><i class="fa fa-download"></i></a></li>
        </ul>
    </div>
  </div>

</div>

<div class="Gallery">
    @foreach(var photo in Model.Photos)
    {
        <img class="flex-img" src="@photo.Path" data-title="@photo.Title">
    }
</div>
</div>

